<div class="page-header">
  <h1>Todos los estados del PechiBook</h1>
</div>

<%= link_to "Agregar nuevo estado", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> |
    <span class="admin">
      <%= link_to "Editar", edit_status_path(status) %> |
      <%= link_to "Eliminar", status, method: :delete, data: { confirm: "Estas seguro de eliminar el estado?"} %> 

    </span>

  </div>
</div>
<% end -%>
